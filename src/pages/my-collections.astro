---
import DashboardLayout from "../layouts/DashboardLayout.astro";
---

<DashboardLayout>
  <h1 class="text-2xl font-semibold mx-4">Mis Recolecciones</h1>
  <div id="empty" class="mt-4 text-gray-600">Cargando solicitudes...</div>
  <ul id="list" class="mt-4 space-y-3 mx-4"></ul>

  <script type="module">
    const listEl = document.getElementById("list");
    const emptyEl = document.getElementById("empty");
    const userEmail = localStorage.getItem("userEmail") || "guest";
    const key = `collections_${userEmail}`;

    function render() {
      listEl.innerHTML = "";
      let items = [];
      try {
        const raw = localStorage.getItem(key);
        if (raw) items = JSON.parse(raw);
      } catch (err) {
        items = [];
      }

      if (!items || items.length === 0) {
        emptyEl.textContent = "No tienes solicitudes de recolección.";
        return;
      }

      emptyEl.textContent = "";

      items.forEach((item) => {
        const li = document.createElement("li");
        li.className = "border border-gray-200 rounded p-3 bg-white shadow-sm";
        li.innerHTML = `
          <div class="flex flex-col space-y-2">
            <div class="font-semibold text-lg text-green-700">${item.wasteType} — ${item.locality}</div>
            <div class="text-sm text-gray-700"><strong>Empresa:</strong> ${item.company || "—"}</div>
            <div class="text-sm text-gray-700"><strong>Usuario:</strong> ${item.userEmail}</div>
            <div class="text-sm text-gray-700"><strong>Dirección:</strong> ${item.address}</div>
            <div class="text-sm text-gray-700"><strong>Localidad:</strong> ${item.locality}</div>
            <div class="text-xs text-gray-500 mt-1"><strong>Fecha de Solicitud:</strong> ${new Date(item.requestDate).toLocaleString()}</div>
            <div class="text-xs text-gray-500"><strong>Estado:</strong> ${item.status}</div>

            ${item.peso ? `<div class="text-xs text-gray-500"><strong>Peso:</strong> ${item.peso} kg</div>` : ""}
            ${item.fechaRecoleccion ? `<div class="text-xs text-gray-500"><strong>Fecha de Recolección:</strong> ${new Date(item.fechaRecoleccion).toLocaleString()}</div>` : ""}
            ${item.turno ? `<div class="text-xs text-gray-500"><strong>Turno:</strong> ${item.turno}</div>` : ""}

            <div class="flex flex-col sm:flex-row gap-2 mt-3">
              <button data-id="${item.id}" class="text-white cursor-pointer font-semibold px-4 py-2 bg-green-600 hover:bg-green-700 transition-colors rounded text-sm mark">Marcar recogido</button>
              <button data-id="${item.id}" class="text-white cursor-pointer font-semibold px-4 py-2 bg-red-600 hover:bg-red-700 transition-colors rounded text-sm del">Eliminar</button>
            </div>
          </div>
        `;
        listEl.appendChild(li);
      });

      // Evento eliminar
      listEl.querySelectorAll(".del").forEach((b) =>
        b.addEventListener("click", (e) => {
          const id = Number(e.currentTarget.dataset.id);
          let items = JSON.parse(localStorage.getItem(key) || "[]");
          items = items.filter((i) => i.id !== id);
          localStorage.setItem(key, JSON.stringify(items));
          render();
        })
      );

      // Evento marcar recogido
      listEl.querySelectorAll(".mark").forEach((b) =>
        b.addEventListener("click", (e) => {
          const id = Number(e.currentTarget.dataset.id);
          let items = JSON.parse(localStorage.getItem(key) || "[]");
          const idx = items.findIndex((i) => i.id === id);
          if (idx === -1) return;

          const peso = prompt("Ingrese el peso recolectado (kg)");
          if (peso === null) return;

          items[idx].status = "Recogido";
          items[idx].peso = peso;
          items[idx].fechaRecoleccion = new Date().toISOString();
          items[idx].turno = items[idx].turno || "Mañana";

          localStorage.setItem(key, JSON.stringify(items));
          render();
        })
      );
    }

    render();
  </script>
</DashboardLayout>
